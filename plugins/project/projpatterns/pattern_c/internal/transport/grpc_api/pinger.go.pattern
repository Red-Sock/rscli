package grpc_api

import (
	"context"
	"time"

	"financial-microservice/pkg/gen/finance_api"
)

type Pinger struct {
	calcFunc func(time time.Time) (diff int32)
	finance_api.UnimplementedFinancialAPIServer
}

func (p *Pinger) Version(_ context.Context, req *finance_api.PingRequest) (rsp *finance_api.PingResponse, err error) {

	diff := time.Since(req.ClientTimestamp.AsTime())

	return &finance_api.PingResponse{Took: uint32(diff)}, nil
}
